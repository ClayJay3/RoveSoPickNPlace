{
  "runArgs": [
    "--name",
    "RoveSoPickNPlace",
    "--network",
    "host",
    "--privileged"
  ],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "build": {
    "dockerfile": "AMD64Jammy.dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "adrianwilczynski.blazor-snippet-pack",
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.vscodeintellicode-csharp",
        "kreativ-software.csharpextensions",
        "k--kato.docomment",
        "PKief.material-icon-theme",
        "christian-kohler.path-intellisense",
        "austincummings.razor-plus",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    }
  },
  "postStartCommand": "git config --global --add safe.directory '*'",
  "postCreateCommand": "dotnet tool install --global dotnet-ef --verbosity diagnostic && dotnet tool install --global dotnet-aspnet-codegenerator --verbosity diagnostic && fish -c 'set -U fish_user_paths $HOME/.dotnet/tools $fish_user_paths'"
}
